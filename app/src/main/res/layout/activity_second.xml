<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <include
        android:id="@+id/main_tool"
        layout="@layout/activity_tool"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/txt_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Berhasil Mendapatkan"
        android:textStyle="bold"
        android:layout_margin="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_tool"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/txt_02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tiket !"
        android:layout_margin="20dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_01"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/img_01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/img_01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="30dp"
        app:layout_constraintTop_toBottomOf="@id/txt_02" />

    <TextView
        android:id="@+id/name"
        android:layout_margin="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/txt_01"
        app:layout_constraintTop_toBottomOf="@id/img_01" />

    <TextView
        android:id="@+id/simbol"
        android:layout_margin="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/name"
        app:layout_constraintTop_toBottomOf="@id/img_01" />

    <TextView
        android:id="@+id/name_02"
        android:layout_margin="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nama"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/simbol"
        app:layout_constraintTop_toBottomOf="@id/img_01" />

    <TextView
        android:id="@+id/time_1"
        android:layout_margin="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jam"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/txt_01"
        app:layout_constraintTop_toBottomOf="@id/name" />

    <TextView
        android:id="@+id/simbol_2"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/simbol"
        app:layout_constraintTop_toBottomOf="@id/simbol" />

    <TextView
        android:id="@+id/time_2"
        android:layout_margin="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jam"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/simbol_2"
        app:layout_constraintTop_toBottomOf="@id/name_02" />

    <TextView
        android:id="@+id/date_1"
        android:layout_margin="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tanggal"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/txt_01"
        app:layout_constraintTop_toBottomOf="@id/time_1" />

    <TextView
        android:id="@+id/simbol_3"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/simbol_2"
        app:layout_constraintTop_toBottomOf="@id/simbol_2" />

    <TextView
        android:id="@+id/date_2"
        android:layout_margin="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tanggal"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/simbol_3"
        app:layout_constraintTop_toBottomOf="@id/time_2" />

    <TextView
        android:id="@+id/destination_1"
        android:layout_margin="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tujuan"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/txt_01"
        app:layout_constraintTop_toBottomOf="@id/date_1" />

    <TextView
        android:id="@+id/simbol_4"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=":"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/simbol_3"
        app:layout_constraintTop_toBottomOf="@id/simbol_3" />

    <TextView
        android:id="@+id/destination_2"
        android:layout_margin="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tujuan"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/simbol_4"
        app:layout_constraintTop_toBottomOf="@id/date_2" />

</androidx.constraintlayout.widget.ConstraintLayout>
